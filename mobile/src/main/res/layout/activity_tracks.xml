<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.refect.spotifystreamer.DetailActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/iv_artist_image"
        android:layout_centerHorizontal="true" />

    <include layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_tracks"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_artist_image" />

    <LinearLayout
        android:padding="20dp"
        android:background="@color/style_color_primary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/rv_tracks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Track"
            android:id="@+id/tv_current_track" />

        <TextView
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Artist"
            android:id="@+id/tv_current_artist" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/toolbar">

        <View
            android:background="@drawable/circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/view_transparent_background"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@android:drawable/ic_media_previous"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/iv_previous"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@android:drawable/ic_media_next"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/iv_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/iv_previous" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="02:14"
            android:textSize="32sp"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:visibility="visible"
        android:id="@+id/fab_play"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:elevation="3dp"
        android:src="@drawable/ic_media_play"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
