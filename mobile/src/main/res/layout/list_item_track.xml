        android:id="@+id/tv_track_name" />

    <TextView
        android:textColor="@color/style_color_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_track_artist" />
</LinearLayout>
